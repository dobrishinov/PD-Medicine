@using DataAccess.Entity;

@model IEnumerable<DataAccess.Repository.AppointmentsRepository>

@{
    ViewBag.Title = "Events";
}

<h2>Events</h2>

<table class="table">
    <tr>
        <td>ID</td>
        <td>UserId</td>
        <td>DoctorId</td>
        <td>Symptoms</td>
        <td>Date and Hour</td>
        <td>Status</td>
    </tr>
    @foreach (var item in (IEnumerable<AppointmentEntity>)ViewData["appointments"])
    {
        var edit = "/DoctorsAppointmentsManager/EditAppointment?id=" + item.Id;
        var delete = "/DoctorsAppointmentsManager/DeleteAppointment?id=" + item.Id;

        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.UserId
            </td>
            <td>
                @item.DoctorId
            </td>
            <td>
                @item.Symptoms
            </td>
            <td>
                @item.DateHour
            </td>
            <td>
                @item.Status
            </td>
        </tr>
    }

</table>
