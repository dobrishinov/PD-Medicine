@using DataAccess.Entity;

@model IEnumerable<DataAccess.Repository.AppointmentsRepository>

@{
    ViewBag.Title = "Appointments Manager";
}

<h2>Appointments Manager</h2>

<h3>Confirm appointments</h3>
<p>
    @Html.ActionLink("Create New", "EditAppointment", "AppointmentsManager")
</p>
<table class="table">
    <tr>
        <td>ID</td>
        <td>Username</td>
        <td>DoctorId</td>
        <td>Symptoms</td>
        <td>Date and Hour</td>
        <td>Status</td>
        <td>Action</td>
    </tr>
    @foreach (var item in (IEnumerable<AppointmentEntity>)ViewData["appointments"])
    {
        var edit = "/AppointmentsManager/EditAppointment?id=" + item.Id;
        var delete = "/AppointmentsManager/DeleteAppointment?id=" + item.Id;
        if (item.Status == true)
        {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Username
            </td>
            <td>
                @item.DoctorId
            </td>
            <td>
                @item.Symptoms
            </td>
            <td>
                @item.DateHour
            </td>
            <td>
                @item.Status
            </td>
            <td>
                <a href="@edit">Edit</a> |
                <a href="@delete">Delete</a>
            </td>
        </tr>
        }
    }

</table>

<h3>Pending or Rejected appointments</h3>

<table class="table">
    <tr>
        <td>ID</td>
        <td>Username</td>
        <td>DoctorId</td>
        <td>Symptoms</td>
        <td>Date and Hour</td>
        <td>Status</td>
        <td>Action</td>
    </tr>
    @foreach (var item in (IEnumerable<AppointmentEntity>)ViewData["appointments"])
    {
        var edit = "/AppointmentsManager/EditAppointment?id=" + item.Id;
        var delete = "/AppointmentsManager/DeleteAppointment?id=" + item.Id;
        if (item.Status == false)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Username
                </td>
                <td>
                    @item.DoctorId
                </td>
                <td>
                    @item.Symptoms
                </td>
                <td>
                    @item.DateHour
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    <a href="@edit">Edit</a> |
                    <a href="@delete">Delete</a>
                </td>
            </tr>
        }
    }

</table>